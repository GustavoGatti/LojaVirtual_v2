@model LojaVirtual_v2.Models.Categoria
@{
    ViewData["Title"] = "CadastrarCategoria";
}

<h1>Cadastrar</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o Nome da categoria">
        <span asp-validation-for="Nome" class="text-danger">  </span>
    </div>
    <div class="mb-3">
        <label asp-for="Slug" class="form-label">Slug</label>
        <input asp-for="Slug" class="form-control" placeholder="Digite o Slug da categoria">
        <span asp-validation-for="Slug" class="text-danger">  </span>
    </div>
    <div class="mb-3">
        <label asp-for="CategoriaPaiId" class="form-label">Categoria Pai</label>
        <select asp-for="CategoriaPaiId" class="form-control" asp-items="@ViewBag.Categorias">
            <option value="">Selecione</option>

        </select>
        <span asp-validation-for="CategoriaPaiId" class="text-danger">  </span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <button type="button" asp-action="Index" class="btn btn-info">Voltar</button>
</form>